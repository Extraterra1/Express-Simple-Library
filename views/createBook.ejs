<%- include('./partials/header.ejs') %>
<div class="title mt-5">
    <h2>Create New Book</h2>
</div>
<form class="w-75 mt-5 ml-3" method="POST">
  <div class="form-row">
    <div class="form-group col-md-6">
      <label for="title">Title</label>
      <input type="text" class="form-control" id="title" name="title" placeholder="Title">
    </div>
    <div class="form-group col-md-6">
      <label for="author">Author</label>
      <select class="form-control" name="author" id="author">
        <% authors.forEach(el => { %>
            <option value="<%= el._id %>"><%= el.name %></option>
        <% }) %>
      </select>
    </div>
  </div>
  <div class="form-group">
    <label for="summary">Summary</label>
    <textarea class="form-control" id="summary" name="summary" rows="3"></textarea>
  </div>
  <div class="form-row">
    <div class="form-group col-md-6">
      <label for="isbn">ISBN</label>
      <input type="Text" class="form-control" id="isbn" name="isbn" placeholder="ISBN">
    </div>
    <div class="form-group col-md-6">
        <legend>Genres</legend>
        <% genres.forEach(el => { %>
            <div class="form-check form-check-inline ml-3">
            <input class="form-check-input" type="checkbox" id="<%= el._id %>" name="genre" value="<%= el._id %>">
            <label class="form-check-label" for="inlineCheckbox1"><%= el.name %></label>
        </div>
        <% }) %>
        
    </div>
  </div>
  <button type="submit" class="btn btn-primary">Submit</button>
  <% if (typeof errors !== 'undefined') { %>
    <ul class="mt-5 text-danger">
        <% errors.forEach(el => { %>
            <li><%= el.msg %></li>
        <% }) %>
    </ul>
  <% } %>
</form>
<%- include('./partials/footer.ejs') %>